<%- include('../user/layout/userHeader.ejs')%>

<main>

    <div
    class="page-header text-center"
    style="background-image: url('')"
  >
    <div class="container">
      <h1 class="page-title">Edit<span>Address</span></h1>
    </div>
    <!-- End .container -->
  </div>
  <!-- End .page-header -->
  <nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/cart">Cart</a></li>
        <li class="breadcrumb-item"><a href="/checkOut">Checkout</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Address</li>
      </ol>
    </div>
    <!-- End .container -->
  </nav>
    <div class="page-content pb-0">
        <div class="container">
          <div class="row">
      
      
            
            <div class="col-lg-12">
              <h2 class="title mb-1">Edit Your Address</h2>
              <!-- End .title mb-2 -->
      
              <form action="/update_address?id=<%= user._id %>" class="contact-form mb-3" method="post">
                
                  <div class="col-sm-14">
                    <label for="cname" class="sr-only">Full Name</label>
                    <input
                      name="fullname"
                      type="text"
                      class="form-control"
                      id="cname"
                      value="<%= user.fullname %>"
                      required
                    />
                  </div>
                  <!-- End .col-sm-6 -->
                
                <!-- End .row -->
      
                <div class="row">
                  <div class="col-sm-6">
                    <label for="cphone" class="sr-only">Phone</label>
                    <input
                      name="mobile"
                      type="tel"
                      class="form-control"
                      id="cphone"
                      value="<%= user.mobile %>"
                    />
                  </div>
                  <!-- End .col-sm-6 -->
      
                  <div class="col-sm-6">
                    <label for="cphone" class="sr-only">Pincode</label>
                    <input
                      name="pin"
                      type="tel"
                      class="form-control"
                      id="cphone"
                      value="<%= user.pin %>"
                    />
                  </div>
      
                  <!-- End .col-sm-6 -->
                </div>
                <div class="col-sm-14">
                  <label for="csubject" class="sr-only">Email Id</label>
                  <input
                    name="email"
                    type="email"
                    class="form-control"
                    id="csubject"
                    value="<%= user.email %>"
                  />
                </div>
                <!-- End .row -->
                <div class="col-sm-14">
                  <label for="csubject" class="sr-only">House Name</label>
                  <input
                    name="houseName"
                    type="text"
                    class="form-control"
                    id="csubject"
                    value="<%= user.houseName %>"
                  />
                </div>
                <div class="row">
                <div class="col-sm-6">
                  <label for="csubject" class="sr-only">City</label>
                  <input
                    name="city"
                    type="text"
                    class="form-control"
                    id="csubject"
                    value="<%= user.city %>"
                  />
                </div>
                <div class="col-sm-6">
                  <label for="csubject" class="sr-only">State</label>
                  <input
                    name="state"
                    type="text"
                    class="form-control"
                    id="csubject"
                    value="<%= user.city %>"
                  />
                </div>
              </div>
      
      
                <!-- <label for="cmessage" class="sr-only">Address</label>
                <textarea
                  name="address"
                  class="form-control"
                  cols="30"
                  rows="4"
                  id="cmessage"
                  placeholder="Address"
                  required
                ></textarea> -->
      
                <button
                  type="submit"
                  class="btn btn-outline-primary-2 btn-minwidth-sm" >
                  <span>SAVE CHANGES</span>
                  <i class="icon-long-arrow-right"></i>
                </button>
                
              </form>
      
              <!-- End .contact-form -->
            </div>
      
            <!-- End .col-lg-6 -->
          </div>
      
          <!-- End .row -->
      
          
        </div>
        <!-- End .container -->
      </div>
</main>



<%- include('../user/layout/userFooter.ejs')%>