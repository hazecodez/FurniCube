<%- include('../admin/layout/adminSidebar.ejs')%> <%-
include('../admin/layout/adminHeader.ejs')%>

<div class="main-panel">
  <div class="content-wrapper">
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Order Management</h4>
          <p class="card-description">All FurniCube Orders</p>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Order Id</th>
                  <th>Order Date</th>
                  <th>Payment</th>
                  <th>Status</th>
                  <th>View</th>
                </tr>
              </thead>
              <tbody>
                <% if(orders.length > 0) { orders.forEach((orders, index) => {
                %>

                <tr>
                  <td><%= index +1 %></td>
                  <td><%= orders.uniqueId %></td>
                  <td>
                    <%= orders.date.toLocaleDateString('en-US', { year:
                    'numeric', month: 'short', day: '2-digit' }).replace(/\//g,
                    '-') %>
                  </td>
                  <td><%= orders.totalAmount%></td>
                  <td><%= orders.status %></td>
                  <td>
                    <div class="card-title">
                      <a href="/admin/orderFullDetails?id=<%= orders._id %>">
                        <button type="button" class="btn btn-success btn-md">
                          Details
                        </button>
                      </a>
                    </div>
                  </td>
                </tr>

                <!-- <tr>
                      <td colspan="5">Users Not Found</td>
                    </tr>
                   -->
                <!-- <tr>
                    <td>Jacob</td>
                    <td>jacod@gmail.com</td>
                    <td>987867543</td>
                    <td>Verified</td>
                    <td><a href=""><label class="badge badge-danger"></label></a></td>
                  </tr> -->
                <% }) %> <% }else{ %> <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <%- include('../admin/layout/adminFooter.ejs')%>

