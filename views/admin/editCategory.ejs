<%- include('../admin/layout/adminSidebar.ejs')%>

<%- include('../admin/layout/adminHeader.ejs')%>


<div class="main-panel">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Update Category</h4>
        
        <form action="/admin/editCate?id=<%= cats._id %>" method="post" class="forms-sample">
          <div class="form-group">
            <label for="exampleInputName1">Updated Category Name</label>
            <input name="catName" type="text" class="form-control" id="exampleInputName1" value="<%= cats.name %>">
          </div>
          
          <button type="submit" class="btn btn-primary mr-2">Update Category</button>
          <% if(typeof message !== 'undefined'){ %>
            <span
              id="er2"
              style="color: rgb(241, 7, 7); text-align: center"
              ><%= message %></span
            >
            <% } %>
          
        </form>
      </div>
    </div>
  </div>

 
<%- include('../admin/layout/adminFooter.ejs')%>