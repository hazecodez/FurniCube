<%- include('../admin/layout/adminSidebar.ejs')%>

<%- include('../admin/layout/adminHeader.ejs')%>



<div class="col-lg-12 grid-margin stretch-card">
  
  <div class="content-wrapper">
    <br><br><br>
    <div class="card">
      <div class="card-body">
        
        <h4 class="card-title">Category Management</h4>
        <p class="card-description"> All BloomStyle <code>Product Catagories</code>
        </p>
        <button type="button" class="btn btn-success m-2">
            <a style="color: blanchedalmond" href="/admin/addCategory"
              >ADD CATEGORY</a
            >
          </button>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th> No. </th>
                <th> Category </th>
                <th> Status </th>
                <th> Action </th>
                <th> Update </th>
              </tr>
              <% if(cats.length>0){ 
                for(let i=0;i<cats.length;i++){  %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= cats[i].name %></td>
                        
                            <% if(cats[i].blocked==0){ %>
                                <td class="text-success">Active</td>
                                <td>
                                    <a href="/admin/block-cat?id=<%= cats[i]._id %>" class="badge badge-danger">BLOCK</a>
                                </td>
                           <% }else{ %>
                            <td class="text-danger">Blocked</td>
                            <td>
                                <a href="/admin/block-cat?id=<%= cats[i]._id %>" class="badge badge-success">UNBLOCK</a>
                            </td>

                         <%  } %>
                         <td>
                            <a href="/admin/edit-cat?id=<%= cats[i]._id %>" class="badge badge-success">Edit</a>
                         </td>
                        
                    </tr>
                <% } %>
                

              <% }else{ %>
                <tr>
                    <td colspan="5">Catagories Not Found</td>
                  </tr>

             <% } %>
            </thead>
            <tbody>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>



<%- include('../admin/layout/adminFooter.ejs')%>