<div class="main-panel">
  <div class="content-wrapper">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Update Category</h4>
        
        <form action="/admin/editCate?id=<%= cats._id %>" method="post" id="editCate" class="forms-sample">
          <div class="form-group">
            <label for="exampleInputName1">Updated Category Name</label>
            <input name="catName" type="text" class="form-control" id="name" value="<%= cats.name %>" >
          </div>
          
          <button type="submit" class="btn btn-primary mr-2">Update Category</button>
          <p style="color: red; display: none;" id="nameError"></p>          
        </form>
      </div>
    </div>
  </div>

  </div>
